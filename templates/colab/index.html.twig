    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Gestion des étapes
            const steps = document.querySelectorAll('.step');
            const formSteps = document.querySelectorAll('.form-step');
            
            // Fonction pour passer à l'étape suivante
            function goToStep(stepNumber) {
                // Masquer toutes les étapes
                formSteps.forEach(step => {
                    step.classList.remove('active');
                });
                
                // Afficher l'étape courante
                document.getElementById(`step${stepNumber}`).classList.add('active');
                
                // Mettre à jour la navigation des étapes
                steps.forEach(step => {
                    step.classList.remove('active', 'completed');
                    const currentStep = parseInt(step.getAttribute('data-step'));
                    
                    if (currentStep < stepNumber) {
                        step.classList.add('completed');
                    } else if (currentStep === stepNumber) {
                        step.classList.add('active');
                    }
                });
            }
            
            // Gestion des clics sur "Suivant"
            document.querySelectorAll('.next-step').forEach(button => {
                button.addEventListener('click', function() {
                    const currentStep = this.closest('.form-step');
                    const currentStepId = parseInt(currentStep.id.replace('step', ''));
                    const nextStepId = parseInt(this.getAttribute('data-next'));
                    
                    // Valider l'étape actuelle avant de passer à la suivante
                    if (validateStep(currentStepId)) {
                        goToStep(nextStepId);
                    }
                });
            });
            
            // Gestion des clics sur "Précédent"
            document.querySelectorAll('.prev-step').forEach(button => {
                button.addEventListener('click', function() {
                    const prevStepId = parseInt(this.getAttribute('data-prev'));
                    goToStep(prevStepId);
                });
            });
            
            // Fonction de validation d'une étape
            function validateStep(stepId) {
                let isValid = true;
                const currentStep = document.getElementById(`step${stepId}`);
                
                // Valider tous les champs requis de l'étape
                const requiredFields = currentStep.querySelectorAll('[required]');
                requiredFields.forEach(field => {
                    if (!field.value.trim()) {
                        field.classList.add('is-invalid');
                        isValid = false;
                    } else {
                        field.classList.remove('is-invalid');
                    }
                    
                    // Validation spécifique pour l'email
                    if (field.type === 'email' && field.value.trim() && !isValidEmail(field.value)) {
                        field.classList.add('is-invalid');
                        isValid = false;
                    }
                });
                
                // Si invalide, animer les champs problématiques
                if (!isValid) {
                    const invalidFields = currentStep.querySelectorAll('.is-invalid');
                    invalidFields.forEach(field => {
                        field.classList.add('animate__headShake');
                        setTimeout(() => {
                            field.classList.remove('animate__headShake');
                        }, 1000);
                    });
                    
                    // Faire défiler jusqu'au premier champ invalide
                    const firstInvalid = currentStep.querySelector('.is-invalid');
                    if (firstInvalid) {
                        firstInvalid.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    }
                }
                
                return isValid;
            }
            
            // Validation d'email
            function isValidEmail(email) {
                return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
            }
            
            // Affichage du nom du fichier
            const fileInput = document.querySelector('.file-upload-input');
            if (fileInput) {
                fileInput.addEventListener('change', function(e) {
                    const fileName = e.target.files[0] 
                        ? e.target.files[0].name 
                        : 'Glissez-déposez vos fichiers ou cliquez pour sélectionner';
                    document.getElementById('file-name').textContent = fileName;
                });
            }
            
            // Gestion de la soumission du formulaire
            const form = document.getElementById('multiStepForm');
            if (form) {
                form.addEventListener('submit', function(e) {
                    // Valider toutes les étapes avant soumission
                    let allValid = true;
                    
                    for (let i = 1; i <= 4; i++) {
                        if (!validateStep(i)) {
                            allValid = false;
                            // Aller à la première étape avec erreur
                            if (allValid === false) {
                                goToStep(i);
                                break;
                            }
                        }
                    }
                    
                    if (!allValid) {
                        e.preventDefault();
                        return false;
                    }
                    
                    // Animation de soumission
                    const submitBtn = document.getElementById('submitBtn');
                    if (submitBtn) {
                        submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i> Envoi en cours...';
                        submitBtn.disabled = true;
                    }
                    
                    return true;
                });
            }
        });
    </script>
