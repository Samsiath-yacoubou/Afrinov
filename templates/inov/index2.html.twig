    <script>
        // Gestion de l'upload de fichier
        const uploadInput = document.querySelector('.upload-input');
        const uploadArea = document.querySelector('.upload-area');
        const uploadText = document.querySelector('.upload-text');
        const fileInfo = document.querySelector('.file-info');
        const fileName = document.querySelector('.file-name');
        const clearFile = document.querySelector('.clear-file');
        const browseBtn = document.querySelector('.browse-btn');

        // Drag and drop
        ['dragenter', 'dragover'].forEach(eventName => {
            uploadArea.addEventListener(eventName, highlight, false);
        });

        ['dragleave', 'drop'].forEach(eventName => {
            uploadArea.addEventListener(eventName, unhighlight, false);
        });

        function highlight(e) {
            e.preventDefault();
            e.stopPropagation();
            uploadArea.classList.add('active');
        }

        function unhighlight(e) {
            e.preventDefault();
            e.stopPropagation();
            uploadArea.classList.remove('active');
        }

        // Gestion des fichiers
        if (uploadInput && uploadArea) {
            // Click sur la zone ou le bouton parcourir
            uploadArea.addEventListener('click', () => uploadInput.click());
            browseBtn.addEventListener('click', (e) => {
                e.stopPropagation();
                uploadInput.click();
            });

            // Changement de fichier
            uploadInput.addEventListener('change', (e) => {
                if (e.target.files.length > 0) {
                    const file = e.target.files[0];
                    fileName.textContent = file.name;
                    uploadText.style.display = 'none';
                    fileInfo.style.display = 'flex';
                    
                    // Afficher un aperçu si c'est une image
                    if (file.type.startsWith('image/')) {
                        const reader = new FileReader();
                        reader.onload = (e) => {
                            // Vous pourriez ici ajouter un aperçu de l'image
                        };
                        reader.readAsDataURL(file);
                    }
                }
            });

            // Effacer le fichier
            clearFile.addEventListener('click', (e) => {
                e.stopPropagation();
                uploadInput.value = '';
                uploadText.style.display = 'block';
                fileInfo.style.display = 'none';
            });

            // Gestion du drop
            uploadArea.addEventListener('drop', (e) => {
                e.preventDefault();
                if (e.dataTransfer.files.length) {
                    uploadInput.files = e.dataTransfer.files;
                    const event = new Event('change');
                    uploadInput.dispatchEvent(event);
                }
            });
        }

        // Compteur de caractères
        const textarea = document.querySelector('.textarea-field');
        const charCount = document.querySelector('.char-count');

        if (textarea && charCount) {
            textarea.addEventListener('input', () => {
                const count = textarea.value.length;
                charCount.textContent = `${count}/500 caractères`;
                
                if (count > 450) {
                    charCount.classList.add('warning');
                } else {
                    charCount.classList.remove('warning');
                }
            });
        }

        // Barre d'outils de formatage
        document.querySelectorAll('.format-btn').forEach(button => {
            button.addEventListener('click', function() {
                const format = this.getAttribute('data-format');
                const start = textarea.selectionStart;
                const end = textarea.selectionEnd;
                const selectedText = textarea.value.substring(start, end);
                
                let formattedText = '';
                if (format === 'bold') formattedText = `**${selectedText}**`;
                if (format === 'italic') formattedText = `_${selectedText}_`;
                
                textarea.setRangeText(formattedText, start, end, 'end');
                textarea.focus();
                
                // Déclenche l'événement input pour mettre à jour le compteur
                const event = new Event('input');
                textarea.dispatchEvent(event);
            });
        });

        // Animation au chargement
        document.addEventListener('DOMContentLoaded', () => {
            // Petite animation pour les éléments du formulaire
            const formGroups = document.querySelectorAll('.form-group');
            formGroups.forEach((group, index) => {
                group.style.opacity = '0';
                group.style.transform = 'translateY(20px)';
                group.style.transition = `all 0.4s ease ${index * 0.1}s`;
                
                setTimeout(() => {
                    group.style.opacity = '1';
                    group.style.transform = 'translateY(0)';
                }, 100);
            });
        });
    </script>
</body>
