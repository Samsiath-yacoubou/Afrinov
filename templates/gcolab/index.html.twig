<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>COLLABORATIONS | DASHBOARD VIP</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --violet-principal: #6A0DAD;
            --violet-clair: #E2D1F9;
            --blanc: #FFFFFF;
            --texte: #2D0053;
            --ombre-portee: 0 4px 12px rgba(106, 13, 173, 0.1);
            --transition-douce: all 0.3s ease;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #F9F6FF;
            color: var(--texte);
            font-size: 17px;
            line-height: 1.6;
        }

        /* HEADER */
        .header {
            background: var(--violet-principal);
            padding: 1.5rem 0;
            box-shadow: var(--ombre-portee);
            margin-bottom: 2rem;
        }

        .titre-principal {
            font-weight: 700;
            font-size: 2rem;
            color: var(--blanc);
            margin: 0;
        }

        .badge-compteur {
            background: var(--blanc);
            color: var(--violet-principal);
            font-weight: 600;
            font-size: 1.1rem;
            padding: 0.5rem 1.25rem;
            border-radius: 50px;
        }

        /* CARTES */
        .carte {
            background: var(--blanc);
            border-radius: 12px;
            border: none;
            box-shadow: var(--ombre-portee);
            transition: var(--transition-douce);
            margin-bottom: 2rem;
            overflow: hidden;
            height: 100%;
        }

        .carte:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(106, 13, 173, 0.15);
        }

        .carte-header {
            background: var(--violet-principal);
            color: var(--blanc);
            padding: 1.5rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .carte-titre {
            font-weight: 600;
            font-size: 1.3rem;
            margin: 0;
            word-break: break-word;
        }

        .carte-sous-titre {
            font-size: 1rem;
            opacity: 0.9;
            margin-top: 0.5rem;
            word-break: break-word;
        }

        .carte-corps {
            padding: 1.75rem;
        }

        /* INFOS */
        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .info-item {
            min-width: 0;
        }

        .info-label {
            color: var(--violet-principal);
            font-weight: 600;
            font-size: 0.95rem;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
        }

        .info-label i {
            margin-right: 0.5rem;
            font-size: 1rem;
            min-width: 20px;
        }

        .info-value {
            font-weight: 500;
            font-size: 1.05rem;
            color: var(--texte);
            word-break: break-word;
        }

        /* TAGS */
        .tag-container {
            display: flex;
            flex-wrap: wrap;
            gap: 0.75rem;
            margin: 1.75rem 0;
        }

        .tag {
            background: var(--violet-clair);
            color: var(--violet-principal);
            padding: 0.6rem 1rem;
            border-radius: 50px;
            font-weight: 500;
            font-size: 0.9rem;
            display: inline-flex;
            align-items: center;
            white-space: nowrap;
        }

        .tag i {
            margin-right: 0.5rem;
            font-size: 0.85rem;
        }

        /* BOUTON MESSAGE */
        .btn-message {
            background: var(--violet-clair);
            color: var(--violet-principal);
            border: none;
            padding: 0.85rem 1.5rem;
            border-radius: 8px;
            font-weight: 600;
            font-size: 1rem;
            width: 100%;
            text-align: left;
            transition: var(--transition-douce);
            cursor: pointer;
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 1.5rem 0;
        }

        .btn-message:hover {
            background: #D9C4F5;
        }

        /* BOUTONS ACTION */
        .btn-action-container {
            display: flex;
            justify-content: space-between;
            margin-top: 1.5rem;
        }

        .btn-action {
            font-weight: 600;
            padding: 0.8rem 1.5rem;
            border-radius: 8px;
            font-size: 1rem;
            transition: var(--transition-douce);
            display: inline-flex;
            align-items: center;
        }

        .btn-action i {
            margin-right: 0.5rem;
            font-size: 0.95rem;
        }

        .btn-telecharger {
            background: var(--violet-principal);
            color: var(--blanc);
            border: none;
        }

        .btn-telecharger:hover {
            background: #5C0B9E;
            transform: translateY(-2px);
        }

        .btn-supprimer {
            background: var(--blanc);
            color: #D32F2F;
            border: 1px solid #D32F2F;
        }

        .btn-supprimer:hover {
            background: #D32F2F;
            color: var(--blanc);
        }

        /* MODAL ULTRA-STABLE */
        .modal {
            display: block !important;
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s ease, visibility 0.3s;
            pointer-events: none;
        }

        .modal.show {
            opacity: 1;
            visibility: visible;
            pointer-events: auto;
        }

        .modal-dialog {
            transition: transform 0.3s ease-out;
            transform: translateY(-20px);
        }

        .modal.show .modal-dialog {
            transform: translateY(0);
        }

        .modal-content {
            border: none;
            border-radius: 12px;
            overflow: hidden;
        }

        .modal-header {
            background: var(--violet-principal);
            color: white;
            border-bottom: none;
            padding: 1.5rem;
        }

        .modal-title {
            font-weight: 600;
            font-size: 1.4rem;
        }

        .modal-body {
            padding: 2rem;
            font-size: 1.1rem;
            line-height: 1.7;
        }

        .btn-close-white {
            filter: invert(1);
            opacity: 0.8;
        }

        .btn-close-white:hover {
            opacity: 1;
        }

        /* GRID */
        .grille-cartes {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(360px, 1fr));
            gap: 2rem;
            padding: 1rem 0;
        }

        @media (max-width: 768px) {
            .grille-cartes {
                grid-template-columns: 1fr;
            }
            
            .info-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <!-- HEADER -->
    <header class="header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="titre-principal">
                    <i class="fas fa-handshake me-2"></i>Collaborations
                </h1>
                <span class="badge-compteur">
                    {{ demandes|length }} demandes
                </span>
            </div>
        </div>
    </header>

    <!-- MAIN CONTENT -->
    <main class="container mb-5">
        <div class="grille-cartes">
            {% for demande in demandes %}
            <div class="carte">
                <div class="carte-header">
                    <h3 class="carte-titre">{{ demande.nomprenom }}</h3>
                    <div class="carte-sous-titre">{{ demande.nomentreprise }}</div>
                </div>
                
                <div class="carte-corps">
                    <div class="info-grid">
                        <div class="info-item">
                            <div class="info-label"><i class="fas fa-user-tie"></i>Fonction</div>
                            <div class="info-value">{{ demande.fonction }}</div>
                        </div>
                        
                        <div class="info-item">
                            <div class="info-label"><i class="fas fa-envelope"></i>Email</div>
                            <div class="info-value">
                                <a href="mailto:{{ demande.email }}" style="color: var(--violet-principal); word-break: break-all;">{{ demande.email }}</a>
                            </div>
                        </div>
                        
                        <div class="info-item">
                            <div class="info-label"><i class="fas fa-phone-alt"></i>Téléphone</div>
                            <div class="info-value">{{ demande.tel }}</div>
                        </div>
                        
                        <div class="info-item">
                            <div class="info-label"><i class="fas fa-globe"></i>Pays</div>
                            <div class="info-value">{{ demande.pays }}</div>
                        </div>
                    </div>
                    
                    <div class="tag-container">
                        <span class="tag"><i class="fas fa-user-tag"></i> {{ demande.typetalent }}</span>
                        <span class="tag"><i class="fas fa-industry"></i> {{ demande.secteur }}</span>
                        <span class="tag"><i class="fas fa-handshake"></i> {{ demande.typecolab }}</span>
                    </div>
                    
                    <button type="button" class="btn-message" onclick="openModal('messageModal{{ demande.id }}')">
                        <span><i class="fas fa-comment me-2"></i>Voir le message complet</span>
                        <i class="fas fa-chevron-right"></i>
                    </button>
                    
                    <!-- Modal -->
                    <div class="modal" id="messageModal{{ demande.id }}" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Message de {{ demande.nomprenom }}</h5>
                                    <button type="button" class="btn-close btn-close-white" onclick="closeModal('messageModal{{ demande.id }}')" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    {{ demande.message|raw }}
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="btn-action-container">
                        {% if demande.ficher %}
                            <a href="{{ asset('uploads/images/' ~ demande.ficher) }}" 
                               download="{{ demande.ficher }}"
                               class="btn-action btn-telecharger">
                                <i class="fas fa-download"></i> Télécharger
                            </a>
                        {% else %}
                            <div></div>
                        {% endif %}
                        
                        <form method="post" action="{{ path('app_gcolab_delete', {'id': demande.id}) }}" 
                              onsubmit="return confirm('Supprimer cette demande ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ demande.id) }}">
                            <button class="btn-action btn-supprimer">
                                <i class="fas fa-trash-alt"></i> Supprimer
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            {% else %}
            <div class="carte text-center py-5">
                <i class="fas fa-inbox fa-3x mb-3" style="color: var(--violet-principal);"></i>
                <h3 style="color: var(--violet-principal); font-size: 1.8rem;">Aucune demande</h3>
                <p class="text-muted" style="font-size: 1.1rem;">Votre boîte de réception est vide.</p>
            </div>
            {% endfor %}
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Gestion personnalisée des modals pour une stabilité parfaite
        function openModal(modalId) {
            const modal = document.getElementById(modalId);
            modal.classList.add('show');
            document.body.style.overflow = 'hidden';
        }

        function closeModal(modalId) {
            const modal = document.getElementById(modalId);
            modal.classList.remove('show');
            document.body.style.overflow = 'auto';
        }

        // Fermer le modal en cliquant à l'extérieur
        document.addEventListener('DOMContentLoaded', function() {
            const modals = document.querySelectorAll('.modal');
            
            modals.forEach(modal => {
                modal.addEventListener('click', function(e) {
                    if (e.target === this) {
                        closeModal(this.id);
                    }
                });
            });
        });
    </script>
</body>
</html>